    <name>Compatpak</name>
  </developer>

  <description>
    <p>
      Tempo is a launcher for all of your Tempo games.
    </p>
  </description>

  <launchable type="desktop-id">com.tempogames.TempoLauncher.desktop</launchable>

  <provides>
    <binary>TempoLauncherSetup.exe</binary>
  </provides>

  <categories>
    <category>Game</category>
    <category>Network</category>
  </categories>

  <keywords>
    <keyword>Tempo</keyword>
    <keyword>Tempo Storm</keyword>
    <keyword>Tempo Launcher</keyword>
    <keyword>The Bazaar</keyword>
  </keywords>

  <icon type="stock">com.tempogames.TempoLauncher</icon>

  <project_group>Compatpak</project_group>

  <branding>
    <color type="primary" scheme_preference="light">#2721ff</color>
    <color type="primary" scheme_preference="dark">#0672be</color>
  </branding>

